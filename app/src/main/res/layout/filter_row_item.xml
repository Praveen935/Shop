<?xml version="1.0" encoding="utf-8"?>
<com.poc.belong.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.poc.belong.widget.InertCheckBox
        android:id="@+id/check_box_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:button="@drawable/apptheme_btn_check_holo_light"
        android:checked="false" />

    <TextView
        android:id="@+id/txt_product_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/check_box_filter"
        android:padding="10dp"
        android:text="Medium Text"
        android:textSize="14sp"/>




</com.poc.belong.widget.CheckableRelativeLayout>